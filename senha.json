<script>
(async function () {
    const urlSenha = "https://raw.githubusercontent.com/Capelasso2391/dhnext-access/main/senha.json";

    try {
        const resposta = await fetch(urlSenha, { cache: "no-store" });
        const dados = await resposta.json();

        const senhaCorreta = dados.senha;
        const senhaUsuario = prompt("Digite a senha para acessar o DHNext:");

        if (senhaUsuario !== senhaCorreta) {
            document.body.innerHTML = `
                <div style="
                    height:100vh;
                    display:flex;
                    align-items:center;
                    justify-content:center;
                    background:#000;
                    color:#fff;
                    font-family:Arial;
                    text-align:center;
                ">
                    <h2>Acesso negado</h2>
                </div>
            `;
        }
    } catch (e) {
        document.body.innerHTML = "Erro ao validar o acesso.";
    }
})();
</script>
